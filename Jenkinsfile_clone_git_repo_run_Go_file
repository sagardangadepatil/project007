pipeline {
    agent {
        label {
            label 'master'
            customWorkspace "${JENKINS_HOME}/${BUILD_NUMBER}/"
        }
    }
    environment {
        Go111MODULE='on'
    }
    stages {
        stage('Clon_git_repo') {
            steps {
            // Cloning Git Repository kodekloudhub/go-webapp-sample.git
            git 'https://github.com/kodekloudhub/go-webapp-sample.git'
        }
        }
        stage('Run_Go_file') {
            steps {
         // Run a shell command go test ./...
         sh 'go test ./...'
        }
        }
    }
}
